<% if action == 'log_in' %>
<% action_url = session_url %>
<% else %>
<% action_url = users_url %>
<% end %>

<form class="" action=" <%= action_url %> " method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="user_name">User name</label>
  <input id="user_name" type="text" name="user[user_name]" value="<%=user.user_name%>">
  <br>
  <label for="pwd">Password</label>
  <input id="pwd" type="password" name="user[password]" value="">
  <br>
  <input type="submit" name="" value="Submit">
</form>
